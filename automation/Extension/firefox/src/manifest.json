{
  "manifest_version": 2,
  "name": "OpenWPM",
  "version": "1.0",
  "description": "OpenWPM Client Extension",
  "background": {
    "scripts": ["feature.js"]
  },
  "content_scripts": [],
  "applications": {
    "gecko": {
      "id": "openwpm@mozilla.org",
      "strict_min_version": "60.0"
    }
  },

  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "cookies",
    "management",
    "storage",
    "alarms",
    "downloads",
    "tabs"
  ],

  "experiment_apis": {
    "sockets": {
      "schema": "./privileged/sockets/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/sockets/api.js",
        "paths": [["sockets"]]
      }
    },
    "profileDirIO": {
      "schema": "./privileged/profileDirIO/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/profileDirIO/api.js",
        "paths": [["profileDirIO"]]
      }
    },
    "stackDump": {
      "schema": "./privileged/stackDump/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/stackDump/api.js",
        "paths": [["stackDump"]]
      }
    }
  }
}
