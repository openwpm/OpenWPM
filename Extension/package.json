  },
  "scripts": {
    "postbuild": "cp dist/openwpm-1.0.zip openwpm.xpi",
    "lint": "npm run lint:eslint && npm run lint:web-ext-lint",
    "lint:eslint": "eslint . --ext jsm,js,json,ts",
    "lint:web-ext-lint": "web-ext lint",
    "info": "npm-scripts-info",
    "build": "npm run clean && npm run build:main && npm run build:module && npm run build:webpack && npm run build:webext",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:webpack": "webpack",
    "build:webext": "web-ext build",
    "fix": "npm run fix:prettier && npm run fix:lint",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint --fix \"src/**/*.ts\"",
    "test": "npm run build && npm run test:lint",
    "test:lint": "eslint --ext \"src/**/*.ts\" && prettier \"src/**/*.ts\" --list-different || exit 0",
    "watch": "npm run clean && npm run build",
    "clean": "trash build test",
    "prepare": "npm run build && npm run test"
  },
  "resolutions": {
    "lodash": "^4.17.21"
  },
  "prettier": {
    "singleQuote": false,
    "trailingComma": "all"
  }
}